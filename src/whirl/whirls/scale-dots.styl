@import '../vars.styl'
/**
  * Scale dots
  *
  * @author jh3y - https://github.com/jh3y
*/

$size = 30px
$margin = 10px
$color = $whirl-primary
$distance = $size + $margin

@keyframes whirl-scale-dots
  0%
    transform scale(0) translateX(-($distance))
  10%
    transform scale(1) translateX(-($distance))
  20%
    transform scale(0) translateX(-($distance))
  30%
    transform scale(0) translateX(0)
  40%
    transform scale(1.25) translateX(0)
  50%
    transform scale(0) translateX(0)
  60%
    transform scale(0) translateX($distance)
  70%
    transform scale(1) translateX($distance)
  80%
  100%
    transform scale(0) translateX($distance)

[data-whirl='scale-dots']

  &:before
    $create-pseudo($size, $size)
    animation whirl-scale-dots 3s infinite
    background-color $color
    border-radius 100%
